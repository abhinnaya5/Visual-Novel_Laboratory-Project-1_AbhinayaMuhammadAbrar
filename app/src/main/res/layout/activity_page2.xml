<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/background1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/jack"
        android:layout_width="284dp"
        android:layout_height="718dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintBottom_toBottomOf="@+id/background1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background1"
        app:layout_constraintVertical_bias="0.461"
        app:srcCompat="@drawable/jack" />

    <ImageView
        android:id="@+id/npcbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background1"
        app:layout_constraintVertical_bias="0.582"
        app:srcCompat="@drawable/npcbox"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="accept"
        app:layout_constraintBottom_toBottomOf="@+id/background1"
        app:layout_constraintTop_toBottomOf="@+id/npcbox"
        app:layout_constraintVertical_bias="0.58"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/conversation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello! My name is jack. and you?"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/npcbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/npcbox"
        app:layout_constraintTop_toTopOf="@+id/npcbox" />

    <ImageView
        android:id="@+id/inputbox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button_accept"
        app:layout_constraintTop_toBottomOf="@+id/npcbox"
        app:srcCompat="@drawable/inputbox"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/inputusername"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/button_accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/npcbox" />


</androidx.constraintlayout.widget.ConstraintLayout>