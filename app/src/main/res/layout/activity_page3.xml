<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/background1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/jack"
        android:layout_width="284dp"
        android:layout_height="718dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintBottom_toBottomOf="@+id/background1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background1"
        app:layout_constraintVertical_bias="0.461"
        app:srcCompat="@drawable/jack" />

    <ImageView
        android:id="@+id/npcbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background1"
        app:layout_constraintVertical_bias="0.582"
        app:srcCompat="@drawable/npcbox"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_walking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="walking"
        app:layout_constraintBottom_toBottomOf="@+id/background1"
        app:layout_constraintTop_toBottomOf="@+id/npcbox"
        app:layout_constraintVertical_bias="0.096"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_hiking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hiking"
        app:layout_constraintBottom_toBottomOf="@+id/background1"
        app:layout_constraintTop_toBottomOf="@+id/npcbox"
        app:layout_constraintVertical_bias="0.353"
        tools:layout_editor_absoluteX="-7dp" />

    <Button
        android:id="@+id/button_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="go to the field"
        app:layout_constraintBottom_toBottomOf="@+id/background1"
        app:layout_constraintTop_toBottomOf="@+id/npcbox"
        app:layout_constraintVertical_bias="0.62"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/conversation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/npcbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/npcbox"
        app:layout_constraintTop_toTopOf="@+id/npcbox" />



</androidx.constraintlayout.widget.ConstraintLayout>